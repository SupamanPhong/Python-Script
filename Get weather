import sys, requests, json
location = str(sys.argv[1:])
locationj=' '.join(sys.argv[1:])
locations=locationj.replace(" ", "")
print("get weather", locationj)
url = 'http://api.openweathermap.org/data/2.5/forecast/daily?q=%s&cnt=3&appid=c3133288d2c20763002f19cb45781785' %(locations)
weather = requests.get(url)
print(weather)
print(weather.text)
weatherjson=json.loads(weather.text)
print(weatherjson['city']['name'], "-", weatherjson['list'][0]['weather'][0]['description'])
